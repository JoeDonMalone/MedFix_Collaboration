<div class="col-md-6">
    <h2>Add Medication</h2>

    <form class="form" id='medication-form'>
        <div class="form-group">
            <h6>Name:</h6>
            <input class="form-input" type="text" id="name" />
        </div>
        <div class="form-group">
            <h6>Dose to consume:</h6>
            <input class="form-input" type="text" id="dosage" />
        </div>
        <div class="form-group">
            <h6>Regimen of consumption (e.g. once a day):</h6>
            <input class="form-input" type="text" id="regimen" />
        </div>
        <div class="form-group">
            <h6>Duration of consumption in days:</h6>
            <input class="form-input" type="text" id="length" />
        </div>
        <div class="form-group">
            <h6>Side effects:</h6>
            <input class="form-input" type="text" id="side-effects" />
        </div>
        <div class="form-group">
            <h6>Refill scheduled? Enter "yes" or "no":</h6>
            <input class="form-input" type="text" id="refill" />
        </div>
        <div class='form-group'>
            <h6>Remind me on:</h6>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="mon" id="reminder-mon">
            <label class="form-check-label" for="reminder-mon">Monday</label>
            </div>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="tue" id="reminder-tue">
            <label class="form-check-label" for="reminder-tue">Tuesday</label>
            </div>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="wed" id="reminder-wed">
            <label class="form-check-label" for="reminder-wed">Wednesday</label>
            </div>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="thu" id="reminder-thu">
            <label class="form-check-label" for="reminder-thu">Thursday</label>
            </div>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="fri" id="reminder-fri">
            <label class="form-check-label" for="reminder-fri">Friday</label>
            </div>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="sat" id="reminder-sat">
            <label class="form-check-label" for="reminder-sat">Saturday</label>
            </div>
            <div class='form-check'>
                <input class="form-check-input" type="checkbox" value="sun" id="reminder-sun">
            <label class="form-check-label" for="reminder-sun">Sunday</label>
            </div>
            <h6>At time:</h6>
            <select class="form-control" id="hour">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
                <option>16</option>
                <option>17</option>
                <option>18</option>
                <option>19</option>
                <option>20</option>
                <option>21</option>
                <option>22</option>
                <option>23</option>
                <option>24</option>
            </select>
            <select class="form-control" id="minute">
                <option>00</option>
                <option>10</option>
                <option>20</option>
                <option>30</option>
                <option>40</option>
                <option>50</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
    </form>
</div>
</div>

<script src="./js/addMedication.js"></script>