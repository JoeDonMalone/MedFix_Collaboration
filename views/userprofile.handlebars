        <div class="row gutters-sm">
          {{#each meds as | med |}}
          <div class="col-sm-6 mb-3">
            <div class="card h-100">
              <div class="card-body">
                <h6 class="d-flex align-items-center mb-3"><i
                  class="material-icons text-info mr-2">{{med.name}}</i>&nbspInfo
                </h6>
                <small>Dose</small>
                <div class=" mb-3" style="height: 5px">
                  {{med.dosage}}
                </div>
                <small>Regimen</small>
                <div class=" mb-3" style="height: 5px">
                  {{med.regimen}}
                </div>
                <small>Duration</small>
                <div class=" mb-3" style="height: 5px">
                  {{med.length}}
                </div>
                <small>Side effects</small>
                <div class=" mb-3" style="height: 5px">
                  {{med.side_effects}}
                </div>
                <small>Refill scheduled?</small>
                <div class=" mb-3" style="height: 5px">
                  {{med.refill}}
                </div>
                <button onclick="deleteMed({{med.med_id}})">Delete medication</button>
